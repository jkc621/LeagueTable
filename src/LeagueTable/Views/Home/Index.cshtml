@model LeagueTable.Models.LogData

@{
    ViewData["Title"] = "Premier League Log";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Team</th>
            <th>Wins</th>
            <th>Draws</th>
            <th>Losses</th>
            <th>For</th>
            <th>Against</th>
            <th>GD</th>
            <th>Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.standing)
        {
            <tr>
                <td>@s.teamName</td>
                <td>@s.wins</td>
                <td>@s.draws</td>
                <td>@s.losses</td>
                <td>@s.goals</td>
                <td>@s.goalsAgainst</td>
                <td>@s.goalDifference</td>
                <td>@s.points</td>
            </tr>
        }
    </tbody>
</table>